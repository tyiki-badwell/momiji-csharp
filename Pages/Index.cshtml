@page
@model IndexModel
@using Microsoft.Extensions.Configuration
@inject IConfiguration configuration
@{
    ViewData["Title"] = "Home Page";

    var param = new Momiji.Test.Run.Param();
    configuration.GetSection("Param").Bind(param);

    var mixerUserName = configuration["MIXER_USER_NAME"];
}
@if (param.Local)
{
    <video id="video-area" controls autoplay>v</video>
    <audio id="audio-area" controls autoplay>a</audio>
}
else
{
    <iframe allowfullscreen="true" src="https://mixer.com/embed/player/@(mixerUserName)?disableLowLatency=0" width="@(param.Width)" height="@(param.Height)"></iframe>
}
