@{
    ViewData["Title"] = "Start2";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<input type="button" value="ON"  data-short-message1="0x90" data-short-message2="0x40" data-short-message3="0x40" />
<input type="button" value="OFF" data-short-message1="0x80" data-short-message2="0x40" data-short-message3="0x40" />

@section Scripts {
    <script type="text/javascript">
        $(function () {
            $("input").on("click", function () {
                $.ajax({
                    type: "POST",
                    url: 'Note',
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: JSON.stringify({ "data": [Number(this.dataset.shortMessage1), Number(this.dataset.shortMessage2), Number(this.dataset.shortMessage3)] })
                });
            });
        });
    </script>
}
